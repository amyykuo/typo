<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<% if @show_merge %>
  <%= form_tag("/admin/content/merge") do %>
  <h4><%= _("Merge Articles") %></h4>
  <input type="text" name="merge" placeholder= "Article ID">
  <input type="hidden" name="current" value="<%= params[:id] %>">
  <input type="submit" value="Merge" />
  <% end %>
<% end %>
